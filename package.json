{
  "name": "monorepo-rkgk",
  "version": "0.0.1",
  "description": "monorepo for rkgk",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "author": "LoTwT <l709937065@gmail.com>",
  "scripts": {
    "build": "pnpm -C packages/* run build",
    "dev": "pnpm -C packages/rkgk run build:watch",
    "lint": "eslint .",
    "play": "pnpm -C playground run dev",
    "prepare": "simple-git-hooks",
    "prettier": "prettier --write .",
    "release": "pnpm build && bumpp -r && pnpm -r publish",
    "test": "vitest",
    "up": "taze latest -I -f -r"
  },
  "devDependencies": {
    "@ayingott/eslint-config": "^0.8.3",
    "@ayingott/prettier-config": "^0.2.2",
    "@types/node": "^20.11.28",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.5",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.0",
    "taze": "^0.13.3",
    "typescript": "^5.4.2",
    "unplugin-auto-import": "^0.17.5",
    "vitest": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "prettier": "@ayingott/prettier-config"
}
